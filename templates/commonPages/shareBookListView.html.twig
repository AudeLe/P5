{% extends "template.html.twig" %}

{% block title %}Partage de liste de livres - {{ session.login }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>{{ loginFriend }}, souhaitez vous partager votre liste de livres avec {{ login }} ?</p>
            <a href="../public/index.php?action=shareBookListWithFriend&login={{ login }}&loginFriend={{ loginFriend }}">Oui</a>
            <a href="../public/index.php?action=notShare&login={{ login }}&loginFriend={{ loginFriend }}">Non</a>
        </div>
    </div>
{% endblock %}